{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Electron: Main",
            "protocol": "inspector",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "start-main-debug"],
            "preLaunchTask": "Start Webpack Dev"
        },
        {
            "name": "Electron: Renderer",
            "type": "pwa-chrome",
            "request": "attach",
            "port": 9223,
            "webRoot": "${workspaceFolder}",
            "timeout": 15000
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Node: Nodemon",
            // "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
            "address": "localhost",
            "port": 5858
        }
    ],
    "compounds": [
        {
            "name": "Electron: All",
            "configurations": ["Electron: Main", "Electron: Renderer"]
        }
    ]
}
